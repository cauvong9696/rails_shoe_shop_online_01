<div class="header">
  <div class="logo">
    <%= link_to image_tag("logo.gif", border: "0"), "#" %>
    <%= form_for :term, url: search_path, html: {class: "search"}, method: :get do |form| %>
        <%= text_field_tag :term, params[:term], class: "custom" %>
        <%= submit_tag "Search", name: nil, class: "register" %>
    <% end %>
  </div>
  <div id="menu">
    <ul class="nav navbar-nav navbar-right">
      <li class="selected"><%= link_to t("home"), root_path %></li>
      <li><%= link_to t("about"), about_path %></li>
      <li><%= link_to t("page_product"), shoes_path %></li>
      <% if logged_in? %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= t "account" %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("setting"),
              edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("page_logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% if current_user.admin? %>
        <li><%= link_to t("admin"), admin_path %></li>
        <% end %>
      <% else %>
        <li><%= link_to t("login"), login_path %></li>
        <li><%= link_to t("btn_sign_up_now"), signup_path %></li>
      <% end %>
      <li><%= link_to t("contact"), contact_path %></li>
    </ul>
  </div>
</div>
